.nested-fields
  = field_set_tag do
    .row
      .large-4.columns
        %label{for: "name"}
          %i.fa.fa-users.fa-fw.fa-lg.subheader
          = t("speaker.name")
          %small
            = t("event.required")
        = f.text_field :name, label: false, maxlength: 28, required: true, class: "radius"

      .large-4.columns
        %label{for: "surname"}
          %i.fa.fa-users.fa-fw.fa-lg.subheader
          = t("speaker.surname")
        = f.text_field :surname, label: false, maxlength: 36, class: "radius"

      .large-4.columns
        %label{for: "email"}
          %i.fa.fa-envelope.fa-fw.fa-lg.subheader
          = t("speaker.email")
          %small
            = t("event.required")
        = f.text_field :email, label: false, maxlength: 64, required: true, type: "email", class: "radius"

        = link_to_remove_association f, class: "button tiny radius" do
          %i.fa.fa-minus.fa-fw.fa-lg
