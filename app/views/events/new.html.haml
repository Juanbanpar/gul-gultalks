- page_title t("event.new_event")
= render partial: "breadcrumbs"

.row
  .visible-for-medium-down
    .large-3.columns
      = link_to conference_path(params[:conference_id]), { class: "button tiny radius expand" } do
        %span.fa.fa-chevron-left.fa-fw.fa-lg
        = t("back").humanize

.row
  .large-12.columns
    %h1.subheader
      = t("event.new_event")
      %hr

.row
  .large-12.columns
    %h5.subheader
      = t("event.are_you_speaker")
  .medium-6.columns
    .text-justify
      %p
        = simple_format(t("event.are_you_speaker_explanation"))

  .medium-6.columns
    %br

  .medium-6.columns
    = link_to basic_events_path(@conference), { class: "button expand" } do
      %b= t("event.i_am_proposing")

  .medium-6.columns
    = link_to detailed_events_path(@conference), { class: "button success expand" } do
      %b= t("event.i_am_speaker")
