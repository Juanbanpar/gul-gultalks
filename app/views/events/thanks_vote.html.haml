- page_title t("to_vote")

.row.show-for-landscape
  .medium-12.columns
    %ul.breadcrumbs
      %li
        = link_to t("home"), root_path
      %li
        = link_to @conference.title, conference_path(@conference)
      %li
        = link_to @event.title, conference_event_path(@conference, @event)
      %li.current
        = t("to_vote")

.row
  .medium-12.columns
    %h1
      = t("thanks.vote_thanks")
    %p
      = t("thanks.vote_thanks_msg")

.row
  .large-6.columns
    = link_to t("event.back_to_event"), conference_event_path(@conference, @event), :class => "button radius expand"
