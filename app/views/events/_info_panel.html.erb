<div class="pure-u-1 pure-u-md-1-3">
    <div class="window-gray">
        <div class="window-title-gray pure-g">
            <div class="pure-u-1">
                <span>Info</span>
            </div>
        </div>
        <div class="window-content">
            <span>
                <i class="fa fa-calendar fa-fw fa-lg subheader"></i>
                <% if event.start_dtime %>
                    <%= l event.start_dtime.to_date, format: :long %>
                <% else %>
                    <%= t("not_available") %>
                <% end %>
            </span>
            <br/>

            <span>
                <i class="fa fa-clock-o fa-fw fa-lg subheader"></i>
                <% if event.start_dtime || event.end_dtime %>
                    <%= "#{event.start_dtime.strftime("%H:%M")} - #{event.end_dtime.strftime("%H:%M")}" %>
                <% else %>
                    <%= t("not_available") %>
                <% end %>
            </span>
            <br/>

            <span>
                <i class="fa fa-map-marker fa-fw fa-lg subheader"></i>
                <% if event.location.present? %>
                    <%= event.location %>
                    <a href="javascript:void(0);" modal="map-modal">
                        <%= t("views.event.directions") %>
                    </a>
                <% else %>
                    <%= t("not_available") %>
                <% end %>
            </span>
            <br/>

            <span>
                <i class="fa fa-building fa-fw fa-lg subheader"></i>
                <%= Event.human_attribute_name("room") %>:
                <% if event.room.present? %>
                    <%= event.room %>
                    <span class="label radius success">
                        <i class="fa fa-wheelchair fa-lg"></i>
                    </span>
                    <%# TODO: write a scope like "room.accesible?" %>
                <% else %>
                    <%= t("not_available") %>
                <% end %>
            </span>
            <hr/>

            <span>
                <% if (event.start_dtime..event.end_dtime).cover?(Time.now) and event.live_video.present? %>
                    <%= link_to(event.live_video, target: "_blank") do %>
                        <span class="button-alert radius">
                            <i class="fa fa-youtube-play fa-fw fa-lg"></i>
                            <strong><%= t("views.event.watch_live") %></strong>
                        </span>
                    <% end %>

                <% elsif event.video.present? %>
                    <i class="fa fa-video-camera fa-fw fa-lg subheader"></i>
                    <%= link_to(event.video, target: "_blank") do %>
                        <%= t("views.event.view_recording") %>
                    <% end %>
                <% else %>
                    <i class="fa fa-video-camera fa-fw fa-lg subheader"></i>
                    <%= t("not_available") %>
                <% end %>
            </span>
            <br/>

            <span>
                <i class="fa fa-globe fa-fw fa-lg subheader"></i>
                <%= Event.human_attribute_name("language") %>:
                <% if event.language.present? %>
                    <%= t("views.event.languages.#{event.language}") %>
                <% else %>
                    <%= t("not_available") %>
                <% end %>
            </span>
            <br/>

            <span>
                <i class="fa fa-lightbulb-o fa-fw fa-lg subheader"></i>
                <%= Event.human_attribute_name("level") %>:
                <% if event.language.present? %>
                    <%= t("views.event.levels.#{event.level}") %>
                <% else %>
                    <%= t("not_available") %>
                <% end %>
            </span>
            <br/>

            <% if not event.cancelled %>
                <% if event.assisted_by.present? %>
                    <i class="fa fa-support fa-fw fa-lg subheader"></i>
                    <%= Event.human_attribute_name("assisted_by") %>
                    <%= event.assisted_by.humanize %>
                <% elsif event.accepted %>
                    <i class="fa fa-support fa-fw subheader"></i>
                    <%= t('event.assist.unassigned') %>
                <% end %>

                <% if event.tag_list.present? %>
                    <% event.tag_list.map do |tag| %>
                        <span class="label primary radius">
                            <%= tag.humanize %>
                        </span>
                    <% end %>
                <% end %>
            <% end %>
        </div>
    </div>
</div>
