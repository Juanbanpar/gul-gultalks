<br/>

<div class="pure-g">
    <div class="pure-u-1">
        <div class="pure-u-1 pure-md-1-2">
            <h4 class="subheader">
                <i class="fa fa-comments-o"></i>
                <%= Event.human_attribute_name("comments") %>

                <% if comments.count.nonzero? %>
                    <sup class="label"><%= comments.count %></sup>
                <% end %>
            </h4>
        </div>

        <hr style="border-style: dashed"/>

        <% if comments.present? %>
            <% comments.map do |comment| %>
                <div id="comment-<%= comment.id %>" class="pure-g">
                    <div class="pure-u-5-6">
                        <div class="pure-u-1 pure-u-sm-1-6">
                            <% icon = @avatar.create_base64(comment.name, grid_size: 9, square_size: 128) %>
                            <%= image_tag "data:image/png;base64,#{icon}", class: "comment-icon" %>
                            <strong class="right">
                                <%= link_to "#" + comment.id.to_s, "#comment-#{comment.id}" %>
                            </strong>
                        </div>

                        <div class="pure-u-1 pure-u-sm-5-6">
                            <h4>
                                <%= comment.name %>
                                <% if comment.ancestry? %>
                                    <small class="subheader">
                                        <i class="fa fa-reply fa-fw fa-flip-horizontal"></i>
                                        <%= link_to "#" + comment.ancestry.last.to_s, "#comment-#{comment.ancestry.last}" %>
                                    </small>
                                <% end %>

                                <small class="subheader">
                                    <strong>&nbsp; Â· &nbsp;</strong>
                                    <%= time_ago_in_words(comment.created_at.to_time, include_seconds: true) %>
                                </small>
                            </h4>

                            <p><%= simple_format(h(comment.content)) %></p>

                            <div class="actions">
                                <%= link_to new_comment_path(conference, event, parent_id: comment) do %>
                                    <i class="fa fa-reply fa-fw"></i>
                                    <%= t("views.event.comment.reply") %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>

                <br/>
            <% end %>

        <% elsif conference.active? %>
            <div class="pure-g">
                <div class="pure-u-1 pure-u-lg-1-3"></div>

                <div class="pure-u-1 pure-u-lg-1-3">
                    <div class="window-blue">
                        <div class="window-title-blue pure-g">
                            <div class="pure-u-1">
                                <span><%= t("views.event.comment.no_comments") %></span>
                            </div>
                        </div>
                        <div class="window-content">
                            <span><%= t("views.event.comment.first_to_comment") %></span>
                        </div>
                    </div>
                </div>
            </div>

        <% else %>
            <div class="pure-g align-center">
                <div class="pure-u-1 pure-u-lg-1-3"></div>

                <div class="pure-u-1 pure-u-lg-1-3">
                    <div class="window-blue">
                        <div class="window-title-blue pure-g">
                            <div class="pure-u-1">
                                <span><%= Event.human_attribute_name("comments") %></span>
                            </div>
                        </div>
                        <div class="window-content">
                            <span class="fa fa-frown-o fa-2xfa-fw"></span>
                            <span><%= t("views.event.comment.no_comments") %></span>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
