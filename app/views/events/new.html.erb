<% page_title t("views.event.new_event") %>

<%= event_breadcrumbs(@conference, nil, "new") %>

<%= render partial: "partials/view_header", locals: { header: "event.new_event" } %>

<div class="pure-g">
    <div class="pure-u-1">
        <h2><%= t("views.event.are_you_speaker") %></h2>
    </div>
</div>

<div class="pure-g gutters">
    <div class="pure-u-1 pure-u-md-1-2">
        <p><%= simple_format(t("views.event.are_you_speaker_explanation")) %></p>
    </div>

    <div class="pure-u-1 pure-u-md-1-2 align-center">
        <div class="pure-g">
            <div class="pure-u-1">
                <%= link_to t("views.event.i_am_proposing"), basic_events_path(@conference), class: "button primary radius full-width" %>
            </div>
        </div>

        <div class="pure-g">
            <div class="pure-u-1">
                <%= link_to t("views.event.i_am_speaker"), detailed_events_path(@conference), class: "button success radius full-width" %>
            </div>
        </div>
    </div>
</div>
