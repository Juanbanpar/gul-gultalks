- if event.created_at.today? and not event.cancelled?
  %span.success.radius.label
    = t("views.event.status.new")
- if event.subclass.eql?("workshop")
  %span.radius.label{'data-tooltip aria-haspopup': "true", title: t("views.event.subclasses.workshop.default")}
    %i.fa.fa-wrench.fa-lg
- if event.subclass.eql?("talk")
  %span.radius.label{'data-tooltip aria-haspopup': "true", title: t("views.event.subclasses.talk.default")}
    %i.fa.fa-bullhorn.fa-lg
- if event.cancelled?
  %span.alert.radius.label{'data-tooltip aria-haspopup': "true", title: t('viewsevent.status.cancelled')}
    %i.fa.fa-lock.fa-lg
- if not event.speaker_list.present? and not event.cancelled?
  %span.warning.radius.label{'data-tooltip aria-haspopup': "true", title: t('views.speaker.unassigned')}
    %i.fa.fa-child.fa-lg
