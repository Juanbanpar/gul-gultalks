.row
  .large-12.columns
    %p Comenta

  .row
    .large-4.columns
      %label{:for => "name"}
        %i.fa.fa-user.fa-lg
        = t("talk.name")
        %small
          = t("talk.form_required")
      = text_field :title, :label => false, :pattern => "extended_alphanumeric", :required => true, class: "radius"
      %small.error
        = t("talk.title_requirements")

  .row
    .large-6.columns
      %label{:for => "description"}
        %i.fa.fa-bars.fa-lg
        = t("talk.comments")
        %small
          = t("talk.form_required")
      = text_area :description, :label => false, :pattern => "extended_alphanumeric", :required => true, class: "radius"
      %small.error
        = t("talk.description_requirements")
  .row
    .large-6.columns
      = link_to "SEND", class: "button radius success"