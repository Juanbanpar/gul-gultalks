.row
  .medium-12.columns
    %ul.breadcrumbs
      %li
        = link_to t("home"), "/"
      %li
        = link_to Conference.friendly.find(params[:conference_id]).title, :controller => 'conferences', :action => 'show', :id => params[:conference_id]
      %li.current
        = talk.title
.row
  .large-12.columns
    %h3
      = talk.title
    %h6.subheader
      = talk.brief_description
.row
  .medium-4.columns
    %ul.no-bullet
      %li
        %i.fa.fa-users
        = talk.speaker
      %li
        %i.fa.fa-calendar
        - if talk.date
          = l talk.date, :format => :long
      %li
        %i.fa.fa-clock-o
        - if talk.start_time && talk.end_time
          = talk.start_time.strftime('%R')
          = t("time.to")
          = talk.end_time.strftime('%R')
        - else
          = t("not_available")

  .medium-4.columns
    %ul.no-bullet
      %li
        %i.fa.fa-map-marker
          = talk.location
          -# = auto_link "¿Cómo llegar?", :link => "www.openstreetmaps.com" 
      %li
        %i.fa.fa-info
      %li
        %i.fa.fa-torsos
        /- talk.
  .medium-4.columns
    %ul.no-bullet
      %li
        %i.fa.fa-language
          -# = talk.language
      %li
        %i
      %li
.row
  .large-12.columns
    // TODO: to put this inline style in css file
    %p.text-justify{:style => "word-break:break-all;"}
      = talk.description

.row
  .large-6.columns
    = link_to t("talk.back_to_talks"), { :controller => 'conferences', :action => 'show', :id => params[:conference_id] }, { :class => "button radius expand" }
  .large-6.columns
    - if Conference.find(talk.conference_id).voting_enabled
      = link_to t("to_vote"), { :controller => "talks", :action => "vote"}, {:class => "button success radius expand"} 
      -# = link_to t("to_vote"), "/thanks_vote", :class => "button success radius expand" 
