.row
  .medium-7.columns
    %ul.breadcrumbs
      %li
        = link_to "Home", "/"
      %li.current
        = link_to "New talk", "#"
.row
  .medium-7.columns
    %p
      Complete the form to register a new talk.
    %p
      * Requiered field
= form_for(@talk, url: {controller: "talks", action: "create"}, data: {avide: ""}) do |f|
  .row
    .large-12.columns
      /= f.label :title
      %label{:for => "title"}
        %i.fi-bookmark
        Title *
      = f.text_field :title, :pattern => "[a-zA-Z\s]+", :required => true
      %small.error Name is required and must be a string.

  .row
    .large-12.columns
      /= f.label :brief_description
      %label{:for => "brief_description"}
        %i.fi-paperclip
        Brief description *
      //(chars < 140 desireable)
      = f.text_field :brief_description, :pattern => "[a-zA-Z\s]+", :required => true
      /= f.text_field :brief_description, :pattern => "alpha_numeric",:required => true

  .row
    .large-12.columns
      /= f.label :description
      %label{:for => "description"}
        %i.fi-align-justify
        Description *
      /= f.text_area :description, :pattern => "alpha_numeric", :required => true
      = f.text_area :description, :pattern => "[a-zA-Z\s]+", :required => true

  .row
    .large-12.columns
      %label
        %i.fi-link
        Slides URL
      /= f.text_field :content_url, :pattern => "url"
      = f.text_field :content_url

  .row
    .large-6.columns
      %label
        %i.fi-lightbulb
        Level
      /= f.label :level
      .row.show-for-touch
        .large-12.columns
          = f.range_field :level, :step => "1", :min => "0", :max => "4"
          %span.level-name

      .row.hide-for-touch
        .large-12.columns
          = radio_button("level", "category", "0")
          %label
            Noob
          = radio_button("level", "category", "1")
          %label
            Easy
          = radio_button("level", "category", "2")
          %label
            Medium
          = radio_button("level", "category", "3")
          %label
            Hard
          = radio_button("level", "category", "4")
          %label
            Hacker

  .row
    .large-12.columns
      /= f.label :speaker
      %label
        %i.fi-torsos
        Speaker[s]
      = f.text_field :speaker

  .row
    .large-12.columns
      /= f.label :tags
      %label{:for => "tags"}
        %span.tag-icon
          \# 
        Tags 
      = f.text_field :tags

  .row
    .large-12.columns
      %label{:for => "speaker_contact_info"}
        %i.fi-mail
        Contact info (e-mail desireable)
      /= f.label :speaker_contact_info
      /= f.email_field :speaker_contact_info, :pattern => "email"
      = f.email_field :speaker_contact_info

  .row
    .large-12.columns
      %label{:for => "comments"}
        %i.fi-comments
        Comments
      = f.text_area :comments
  .row
    .large-6.columns.large-centered
      = f.submit "Send talk", class: "button radius expand success"    
