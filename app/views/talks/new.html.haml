.row
  .medium-7.columns
    %ul.breadcrumbs
      %li
        = link_to "Home", "/"
      %li.current
        %p New talk
.row
  .medium-7.columns
    %p Complete the form to register a new talk
= form_for(@talk, url: {action: "create"}, data: {avide: ""}) do |f|
  .row
    .large-12.columns.title-field
      /= f.label :title
      %i.fi-bookmark
      Title
      = f.text_field :title, :pattern => "[a-zA-Z\s]+", :required => true
      %small.error Name is required and must be a string.

  .row
    .large-12.columns
      /= f.label :brief_description
      %label{:for => "brief_description"}
        %i.fi-paperclip
        Brief description
      //(chars < 140 desireable)
      = f.text_field :brief_description, :pattern => "[a-zA-Z\s]+", :required => true
      /= f.text_field :brief_description, :pattern => "alpha_numeric",:required => true

  .row
    .large-12.columns
      /= f.label :description
      %label{:for => "description"}
        %i.fi-align-justify
        Description
      /= f.text_area :description, :pattern => "alpha_numeric", :required => true
      = f.text_area :description, :pattern => "[a-zA-Z\s]+", :required => true

  .row
    .large-12.columns
      %label
        %i.fi-link
        Slides URL
      /= f.text_field :content_url, :pattern => "url"
      = f.text_field :content_url

  .row
    .medium-6.columns
      %label
        %i.fi-lightbulb
        Level
      /= f.label :level
      = f.range_field :level, :step => "1", :min => "0", :max => "4"
      /%input#level{:for => "level", :type => "range", :step => "1", :min => "0", :max => "4"}
    .medium-4.left.columns  
      %p Level Name

  .row
    .large-12.columns
      /= f.label :speaker
      %label
        %i.fi-torsos
        Speaker[s]
      = f.text_field :speaker

  .row
    .large-12.columns
      /= f.label :tags
      %label{:for => "tags"}
        %span.tag-icon
          \# 
        Tags 
      = f.text_field :tags

  .row
    .large-12.columns
      %label{:for => "speaker_contact_info"}
        %i.fi-mail
        Contact info (e-mail desireable)
      /= f.label :speaker_contact_info
      /= f.email_field :speaker_contact_info, :pattern => "email"
      = f.email_field :speaker_contact_info

