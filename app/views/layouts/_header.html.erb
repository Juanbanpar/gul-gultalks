<%# Header and Nav %>
<div id="top-bar">
    <%= link_to root_path, id: "logo-title" do %>
        <h1>
            <%= image_tag("/favicon-96x96.png", height: "48", width: "48", alt: "GulTalks ") %>
            <div>
                <span id="logo-head">GulTalks</span>
                <%# <small id="logo-subhead"> %>
                    <sub id="logo-subhead">by GUL</sub>
                <%# </small> %>
            </div>
        </h1>
    <% end %>

    <a href="javascript:void(0);" id="top-menu"><i class="fa fa-bars" aria-hidden="true"></i></a>
</div>

<section class="main-section">

<%# Conference details %>
<% if defined?(conference) and conference != nil %>
    <div class="window-blue">
        <div class="window-title-blue pure-g">
            <div class="pure-u-1 pure-u-md-1-2">
                <span><b><%= conference.title %></b></span>
            </div>
            <div class="pure-u-1 pure-u-md-1-2">
                <span><%= t("date.from") %> <%= conference.start_date.day %> <%= t("date.of") %> <%= l(conference.start_date, format: :month_only) %></span>
                <span><%= t("date.to") %> <%= conference.end_date.day %> <%= t("date.of") %> <%= l(conference.end_date, format: :month_only) %></span>
            </div>
        </div>
        <div class="window-content">
            <span>
                <i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
                <%= t("views.conference.call_for_papers_period") %>
                <%= t("date.from") %>
                <b><%= l(@conference.call_for_papers_start_date, format: :long) %></b>
                <%= t("date.to") %>
                <b><%= l(@conference.call_for_papers_end_date, format: :long)%></b>
            </span>
            <br/>
            <span>
                <i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
                <%= t("views.conference.voting_period") %>
                <%= t("date.from") %>
                <b><%= l(@conference.voting_start_date, format: :long) %></b>
                <%= t("date.to") %>
                <b><%= l(@conference.voting_end_date, format: :long)%></b>
            </span>
        </div>
    </div>
<% end %>

    <div class="pure-g">
        <div class="pure-u-1-1">
            <%= yield %>
        </div>
    </div>
</section>


<%= render "layouts/footer" %>
