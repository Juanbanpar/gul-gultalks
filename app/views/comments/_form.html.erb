<br/>
<br/>

<div class="pure-g">
    <div class="pure-u-1">
        <div class="pure-g">
            <div class="pure-u-1 pure-u-lg-1-2">
                <h4 class="subheader">
                    <i class="fa fa-comment-o"></i>
                    <%= t("views.event.to_comment") %>
                </h4>
                <hr/>
            </div>
        </div>

        <div class="pure-g gutters">
            <div class="pure-u-1 pure-u-md-1-2">
                <%= form_for([@commentable, @comment], url: {controller: "comments", action: "create", event_id: @event}) do |f| %>
                    <% f.hidden_field :parent_id %>

                    <div class="pure-u-1">
                        <label for="name">
                            <i class="fa fa-user fa-fw fa-lg subheader"></i>
                            <%= Comment.human_attribute_name("name") %>
                            <small><%= t("views.event.required") %></small>
                        </label>

                        <%= f.text_field :name, label: false, required: true, class: "full-width" %>
                    </div>

                    <div class="pure-u-1">
                        <label for="email">
                            <i class="fa fa-envelope fa-fw fa-lg subheader"></i>
                            <%= Comment.human_attribute_name("email") %>
                            <small><%= t("views.event.required") %></small>
                        </label>

                        <%= f.text_field :email, label: false, required: true, class: "full-width" %>
                    </div>

                    <div class="pure-u-1">
                        <label for="content">
                            <i class="fa fa-bars fa-fw fa-lg subheader"></i>
                            <%= Comment.human_attribute_name("content") %>
                            <small><%= t("views.event.required") %></small>
                        </label>

                        <%= f.text_area :content, label: false, maxlength: 256, required: true, class: "full-width", size: "10x8" %>
                    </div>

                    <div class="pure-u-1">
                        <%= render "partials/recaptcha" %>
                    </div>

                    <div class="pure-u-1-3">
                        <%= f.submit(t("views.event.comment.post"), class: "button-success radius full-width") %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
