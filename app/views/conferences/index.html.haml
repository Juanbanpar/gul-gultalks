.row
  .large-12.columns
    %ul.breadcrumbs
      %li
        = link_to t("home"), root_path
      %li.current
        = t("conference.list")
  .large-12.columns
    %h1.subheader
      Antiguas ediciones
    %hr

    .large-12.columns
      .large-block-grid-4
        - @conferences.each do |conference|
          - unless conference.active
            .panel.radius.expand
              -# = image_tag("http://placehold.it/230x320")
              %h4
                = link_to conference.title, conference_path(conference)
              %p
                /= event.subclass.eql?("talk").count
                /charlas

                /= event.subclass.eql?("workshop").count
                /talleres
                / = l conference.start_date, :format => :year

