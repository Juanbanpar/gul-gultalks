.row
  .large-12.columns
    %h1
      = @conference.title
    %h6.subheader
      = @conference.description
    %h3.subheader
      %span.grey>= t("date.from")
      = l @conference.start_date, :format => :day_only
      %span.grey>= t("date.to")
      = l @conference.end_date, :format => :day_only
      %span.grey>= t("date.of")
      = l @conference.start_date, :format => :month_only

.row
  .large-12.columns
    = render "partials/calendar"
    - if @talks.count > 0
      %table
        %thead
          %tr
            %th{:width => "360"}
              = t("Talk")
            %th{:width => "150"}
              %i.fi-calendar
              &
              %i.fi-clock
            %th{:width => "40"}
              = t("Votes")
        %tbody
          - @talks.each do |talk|
            %tr
              %td
                = link_to talk.title, :controller => 'talks', :action => 'show', :id => talk.id, :conference_id => @conference.id
              %td
                - if talk.date
                  = l talk.date
              %td.text-center
                = talk.votes
    - else
      .row
        .medium-6.medium-centered.columns
          .panel.callout.radius
            %h3
              = t("conference.call_for_talks_open")
            %p
              = t("conference.first_to_propose")

.row
  .large-12.columns

.row
  .large-6.columns
    = link_to t("conference.list"), { :controller => 'conferences', :action => 'index' }, { :class => "button radius expand" }
  .large-6.columns
    - if @conference.call_for_papers_enabled
      = link_to t("conference.propose_talk"), { :controller => 'talks', :action => 'new', :conference_id => @conference.id }, { :class => "button success radius expand" }
